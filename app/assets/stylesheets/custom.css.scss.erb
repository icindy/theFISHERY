.rbar {
  background-color: #eee;
  padding: 20px;
  -webkit-border-radius: 0 0 6px 6px;
  -moz-border-radius: 0 0 6px 6px;
  border-radius: 0 0 6px 6px;
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
  -moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
  box-shadow: 0 1px 2px rgba(0,0,0,.15);
}

footer {
  clear:both !important;
  width:100%;
  position: relative;
  height: 35px;
  color:#200f08 ;
  background:#1b1f20;
  margin-top: 45px;
  
  
  /*Opacity*/
  filter:alpha(opacity=75); /* msie */  
  -moz-opacity: 0.75; /* firefox 1.0 */  
  -khtml-opacity: 0.75; /* webkit */  
  opacity: 0.75; /* css 3 */

    small { 
      float: left; 
      color: white;
     }
    ul {
      float: center;
      list-style: none;
    li {
      float: left;
      margin-left: 10px;
      display: block;
    }
  }
  

 
}



nav { 
  width:100%;
  height:48px;
  background:#1b1f20;
  position:fixed;
  z-index:4;
  }

nav div { 
  width:650px;
  margin:0px auto;
  }

nav a.nav-link {
  color:#FFF;
  text-decoration:none;
  text-align:center;
  -webkit-text-stroke:0.2px;
  font-family:'Montserrat',sans-serif;
  }

nav a.nav-link { 
  line-height:48px;
  min-width:90px;
  text-align:center;
  font-size:16px;
  float:left;
  }

  nav a.red.selected{color:#d13332;border-color:#d13332!important;}
  nav a.red:hover{color:#d13332;text-shadow:0px 0px 5px #d13332;}
  nav a.orange.selected{color:#ea5932;border-color:#ea5932!important;}
  nav a.orange:hover{color:#ea5932;text-shadow:0px 0px 5px #ea5932;}
  nav a.yellow.selected{color:#fff9ae;border-color:#fff9ae!important;}
  nav a.yellow:hover{color:#fff9ae;text-shadow:0px 0px 5px #fff9ae;}
  nav a.green.selected{color:#18b159;border-color:#18b159!important;}
  nav a.green:hover{color:#18b159;text-shadow:0px 0px 5px #18b159;}
  nav a.blue.selected{color:#00aeef;border-color:#00aeef!important;}
  nav a.blue:hover{color:#00aeef;text-shadow:0px 0px 5px #00aeef;}
  nav a.grey.selected{color:#aaa;border-color:#aaa!important;}
  nav a.grey:hover{color:#aaa;text-shadow:0px 0px 5px #aaa;}


header { 
  position:relative;
  top:45px;
  height:310px;
  border-bottom:5px solid #b9b9b9;
  background:url(<%= asset_path 'backdrop.png' %>); 
  background-size:contain;
  margin-bottom:60px;
}

header img { 
  height:225px;
  margin:0px auto;
  display:block;
  padding:18px 5px;
  }

header #tabs { 
  width:254px;
  height:32px;
  margin:7px auto;
  text-align:center;
  background-image:url(<%= asset_path 'tabs.png' %>); 
  border-radius:5px;
  background-size:100%;
  }

header #tabs span { 
  width:84px;
  display:block;
  float:left;
  line-height:33px;
  font-size:17px;
  color:#FFF;
  -webkit-text-stroke:0.2px;
  font-family:'Montserrat',sans-serif;
  }

header #tabs span.middle { 
border-right:1px solid rgba(0,0,0,0);
border-left:1px solid rgba(0,0,0,0);
}

.devise-login {
  width:250px;
  height:500px;
  position:absolute;
  left:50%;
  top:50%;
  margin:-300px 0 0 -150px;
  background-color: #eee;
  padding: 20px;
  -webkit-border-radius: 0 0 6px 6px;
  -moz-border-radius: 0 0 6px 6px;
  border-radius: 0 0 6px 6px;
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.15);
  -moz-box-shadow: 0 1px 2px rgba(0,0,0,.15);
  box-shadow: 0 1px 2px rgba(0,0,0,.15);
}